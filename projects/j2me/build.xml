<project name="InTheClear" default="build">
   <property file="build.properties" />

   <taskdef resource="bb-ant-defs.xml" />

   <property name="src.dir" location="src" />
   <property name="build.dir" location="build" />

   <target name="build">
      <mkdir dir="build" />
      <rapc output="${output}" srcdir="${src.dir}" destdir="${build.dir}"
            quiet="true">
         <jdp file="build.properties" />
      </rapc>
   </target>

   <target name="sign" depends="build">
      <sigtool codfile="${build.dir}/${output}.cod" />
      <delete file="LogFile.txt" />
   </target>

   <target name="clean">
      <delete dir="${build.dir}" />
   </target>

   <target name="load-simulator" depends="build">
      <copy todir="${simulator.dir}">
         <fileset dir="${build.dir}" includes="*.cod,*.csl,*.cso,*.debug,*.jar" />
      </copy>
   </target>
</project>
